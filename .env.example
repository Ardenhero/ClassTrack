# Production
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://classtrack-navy.vercel.app

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
DATABASE_URL=postgres://postgres.xxx:password@aws-0-region.pooler.supabase.com:6543/postgres

# Secrets
API_SECRET=your-secure-api-key-min-32-chars
JWT_SECRET=your-jwt-secret

# Rate Limiting (Upstash Redis - Optional but recommended)
# Get free tier at https://upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token

# Error Monitoring (Sentry - Optional)
SENTRY_DSN=your-sentry-dsn

